<build>
  <plugins>
    <!-- 1. Copy ucc-g-1.3.jar into target/ -->
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-dependency-plugin</artifactId>
      <version>3.7.1</version>
      <executions>
        <execution>
          <id>copy-ucc-jar</id>
          <phase>package</phase>
          <goals>
            <goal>copy</goal>
          </goals>
          <configuration>
            <artifactItems>
              <artifactItem>
                <groupId>com.example</groupId>
                <artifactId>ucc-g</artifactId>
                <version>1.3</version>
                <type>jar</type>
                <destFileName>ucc-g-1.3.jar</destFileName>
              </artifactItem>
            </artifactItems>
            <outputDirectory>${project.build.directory}</outputDirectory>
          </configuration>
        </execution>
      </executions>
    </plugin>

    <!-- 2. Run ucc-g-1.3.jar -->
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>3.5.1</version>
      <executions>
        <execution>
          <id>run-ucc</id>
          <phase>verify</phase> <!-- or "package" if you want immediately after copy -->
          <goals>
            <goal>exec</goal>
          </goals>
          <configuration>
            <executable>java</executable>
            <arguments>
              <argument>-jar</argument>
              <argument>${project.build.directory}/ucc-g-1.3.jar</argument>
              <!-- optional args to pass to your jar -->
              <!-- <argument>--foo=bar</argument> -->
            </arguments>
          </configuration>
        </execution>
      </executions>
    </plugin>
  </plugins>
</build>
